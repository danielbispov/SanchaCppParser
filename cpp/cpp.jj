| < DECREMENTA: "--" >
}

SKIP :
{
  " "
| "\t"
| "\n"
| "//" : COMENTARIO_LINHA
| "/*" : COMENTARIO_BLOCO
}

<COMENTARIO_LINHA> SKIP:
{
  "\n" : DEFAULT
}
<COMENTARIO_BLOCO> SKIP:
{
  "*/" : DEFAULT
}

TOKEN : {
  <  CARACTER : ("L") ? "'"
   (   (~["'","\\","\n","\r"])
   | ("\\" (
             ["n","t","v","b","r","f","a","\\","?","'","\""]
            |
             "0" (["0"-"7"])*
            |
             ["1"-"9"] (["0"-"9"])*
            |
             ("0x" | "0X") (["0"-"9","a"-"f","A"-"F"])+
           )
     )
   )
   "'" >
}
