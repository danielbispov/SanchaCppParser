| < DIFERENTE: "!=" >
| < MENOR: "<" >
| < MAIOR: ">" >
| < MENORIGUAL: "<=" >
| < MAIORIGUAL: ">=" >
| < MENORMENOR: "<<" >
| < MAIORMAIOR: ">>" >
